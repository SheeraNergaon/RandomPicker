<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="12dp"
    android:background="@drawable/rounded_input">

    <!-- Header: radio + group name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/rbSelectGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Group name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Members list -->
    <LinearLayout
        android:id="@+id/containerMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <!-- Add member row with inline + -->
    <LinearLayout
        android:id="@+id/layoutAddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etNewMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add member"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_plus_small"
            android:drawablePadding="12dp" />
    </LinearLayout>

</LinearLayout>
